<html>
<head>
    <title>My_Books</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/nlbooks/css/style.css') }}" type="text/css" media="all" />
    {% endblock %}
</head>
<body>
    <h1>All books</h1>
    <table>
        <thead>
            <tr>
                <th>Titredulivre</th>
                <th>Description</th>
                <th>Auteurs</th>
                <th>Couverture</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.cover }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('nl_books_addbooks') }}">
        Create a new entry
    </a>
</body>
</html>


